<Popup @ref=popup>
    <div class="w3-container">
        <h2>@title</h2>
        <p>
            @description
        </p>
        <div class="w3-center w3-padding">
            <button class="w3-button w3-green" @onclick=confirm>Ok</button>
        </div>
    </div>
</Popup>


@code {
    private string title;
    private string description;
    private Popup popup;

    public void Show(string title, string desc = "") {
        this.title = title;
        this.description = desc;
        StateHasChanged();
        popup.Show();
    }

    public void Hide() {
        popup.Hide();
    }

    private void confirm() {
        Hide();
    }
}